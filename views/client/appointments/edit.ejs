<% layout('client/layouts/boilerplate') %>
<div class="row">
    <h1 class="text-center">Edit Appointment</h1>
    <div class="col-6 offset-3">
        <form action="/client/<%= appointment._id %>?_method=PUT" method="post" class="validated-form" novalidate>
            <div class="mb-3">
                <label class="form-label" for="name">Patient Name:</label>
                <input class="form-control" type="text" id="name" name="appointment[name]" value="<%= appointment.name %>" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="age">Age (in years):</label>
                <input class="form-control" type="number" id="age" name="appointment[age]" value="<%= appointment.age %>" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="weight">Weight (in Kgs):</label>
                <input class="form-control" type="number" id="weight" name="appointment[weight]" value="<%= appointment.weight %>">
            </div>
            <div class="mb-3">
                <label class="form-label" for="date">Appointment Date:</label>
                <input class="form-control" type="date" id="date" name="appointment[date]" value="<%= appointment.date %>" required>
            </div>
            <div class="mb-3">
                <label for="slot" class="form-label">Time Slot:</label>
                <select class="form-select" name="appointment[slot]" id="slot" required>
                    <option value="Morning">Morning</option>
                    <option value="Evening">Evening</option>
                </select>
            </div>
            <div class="mb-3">
                <label for="purpose" class="form-label">Purpose of visit:</label>
                <textarea type="text" class="form-control" name="appointment[purpose]" id="purpose" cols="30" rows="5" required><%= appointment.purpose %></textarea>
            </div>
            <div class="mb-3">
                <button class="btn btn-success">Update Appointment</button>
                <a class="btn btn-info" href="/client/<%= appointment._id %>">Back</a>
            </div>
        </form>
    </div>
</div>