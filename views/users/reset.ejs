<% layout('layouts/boilerplate') %>
<div class="col-6 offset-3">
    <h2>Reset Password</h2>
    <form action="/forgot/reset/<%=id%>?_method=PUT" method="POST" class="validated-form" novalidate>
        <div class="mb-3">
            <label class="form-label" for="password">New Password</label>
            <input class="form-control" type="password" id = "password" name = "password" onkeyup="check();" required>
        </div>
        <div class="mb-3">
            <label class="form-label" for="confirm-password">Confirm Password</label>
            <input class="form-control" type="password" id = "confirm-password" name = "confirm-password" onkeyup="check();" required>
            <span id="message"></span>
        </div>
        <button class="btn btn-success">Reset Password</button>
    </form>
</div>